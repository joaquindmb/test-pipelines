{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "test-pipelines"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/PL_MOVE_FILES1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "DeleteActivity",
						"type": "Delete",
						"dependsOn": [
							{
								"activity": "Copy Data1",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"dataset": {
								"referenceName": "DS_FILE_REFERENCE2",
								"type": "DatasetReference",
								"parameters": {
									"sDS_FileName": {
										"value": "@pipeline().parameters.sFileName",
										"type": "Expression"
									},
									"sDS_FolderName": {
										"value": "@pipeline().parameters.sFolderOrigin",
										"type": "Expression"
									}
								}
							},
							"enableLogging": false,
							"maxConcurrentConnections": 1
						}
					},
					{
						"name": "Copy Data1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "AzureDataLakeStoreSource",
								"recursive": false
							},
							"sink": {
								"type": "AzureDataLakeStoreSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "DS_FILE_REFERENCE2",
								"type": "DatasetReference",
								"parameters": {
									"sDS_FileName": {
										"value": "@pipeline().parameters.sFileName",
										"type": "Expression"
									},
									"sDS_FolderName": {
										"value": "@pipeline().parameters.sFolderOrigin",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "DS_FILE_REFERENCE2",
								"type": "DatasetReference",
								"parameters": {
									"sDS_FileName": {
										"value": "@pipeline().parameters.sFileName",
										"type": "Expression"
									},
									"sDS_FolderName": {
										"value": "@pipeline().parameters.sFolderDest",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"sFileName": {
						"type": "String"
					},
					"sFolderOrigin": {
						"type": "String"
					},
					"sFolderDest": {
						"type": "String"
					}
				},
				"annotations": []
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/pipeline1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy Data1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "AzureDataLakeStoreSource",
								"recursive": false
							},
							"sink": {
								"type": "SqlSink",
								"writeBatchSize": 10000
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"columnMappings": {
									"nombre": "nombre",
									"name": "name",
									"nom": "nom",
									"iso2": "iso2",
									"iso3": "iso3",
									"phone_code": "phone_code"
								}
							}
						},
						"inputs": [
							{
								"referenceName": "AzureDataLakeStoreFile1",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "AzureSqlTable1",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": []
		}
	]
}